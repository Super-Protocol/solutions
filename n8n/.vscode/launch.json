  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug current file",
      "type": "node-terminal",
      "request": "launch",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "command": "npx tsx ${relativeFile}"
    },
    {
      "address": "127.0.0.1",
      "localRoot": "${workspaceFolder}",
      "name": "Attach to Remote 9229",
      "port": 9229,
      "remoteRoot": "/app",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "timeout": 120000,
      "type": "node"
    },
    {
      "address": "127.0.0.1",
      "localRoot": "${workspaceFolder}/packages",
      "name": "Attach to Remote 9230",
      "port": 9230,
      "remoteRoot": "/home/node/packages",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "timeout": 120000,
      "type": "node"
    },
    {
      "name": "Mediator",
      "type": "node-terminal",
      "request": "launch",
      "command": "npx tsx ./node_modules/moleculer/bin/moleculer-runner.js --config packages/mediator-api/moleculer.config.ts packages/mediator-api/src/services/*.service.ts",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pipeline tools download",
      "type": "node-terminal",
      "request": "launch",
      "command": "npx tsx ${workspaceFolder}/pipeline-tools/s3-localfs/index.js download -b tee-workflows solution-runner/test1/ ${workspaceFolder}/test-files",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "HASH_OUTPUT": "./",
        "S3_USESSL": "false"
      }
    },
    {
      "name": "Pipeline tools calculateHash",
      "type": "node-terminal",
      "request": "launch",
      "command": "npx tsx ${workspaceFolder}/pipeline-tools/s3-localfs/index.js calculateSha256 folder:/Users/vlado/Projects/superprotocol/sp-solutions/LLM-engines/text-generation-webui/tunnel-client-nodejs/scripts subfolders:/Users/vlado/Projects/superprotocol/sp-solutions/LLM-engines/text-generation-webui/tunnel-client-nodejs/sp-inputs",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "HASH_OUTPUT": "./hahes",
        "S3_USESSL": "false"
      }
    }
  ]
}
