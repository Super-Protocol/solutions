{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "types": ["node", "jest"],
    "outDir": "run/dist",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "run/dist/tsconfig.build.tsbuildinfo"
  },
  "include": ["src/**/*", "test/**/*"]
}
