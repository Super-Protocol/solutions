{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["es2020", "dom"],
      "types": ["node", "jest"],
      "outDir": "run/dist",
      "rootDir": "src",
      "allowJs": true,
      "strict": true,
      "declaration": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
    },
    "include": ["src/**/*", "test/**/*"]
}
